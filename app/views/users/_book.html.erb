
    <div class="col-md-3">
  <h2>User info</h2>
    <%= image_tag user.get_profile_image(100, 100) %>
  <table class ="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </tbody>
  </table>
    
    <% if user == current_user %>
      <%= link_to edit_user_path(user.id) ,class: 'btn btn-outline-secondary' do %>
      <span><i class="fa-solid fa-user-gear"></i></span>
      <% end %>
    <% end %>
    <!--<i class="fa-solid fa-user-plus"></i><a class="btn btn-outline-secondary btn-block edit_user_id"></a>-->
  

    <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new, url:'/books',method: :post do |f| %>
        <div class="form-group">
          <label for="book_title">Title</label><br>
            <%= f.text_field :title %>
        </div> 
        <div class="form-group">
          <label for="book_opinion">Opinion</label><br>
          <%= f.text_area :body %>
        </div>  
      
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>
