<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
  <h2>User info</h2>
    <%= image_tag @user.get_profile_image(100, 100) %>
  <table class ="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <i class="fa-solid fa-user-plus"></i><a class="btn btn-outline-secondary btn-block edit_user_id"></a>
  </div>

<h2>New book</h2>
 <%= form_with model: @books,url:'/books',method: :post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
      
    <%= f.submit 'Create Book' %>
  <% end %>
  </div>
  </div>
  </div>
  
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            
            <th>Title</th>
            <th>Opinion</th>
            
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(60, 60) %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>