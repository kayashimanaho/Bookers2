<div class="container">
  <h1>User info</h1>
    <%= image_tag @user.get_profile_image(100, 100) %>
  <table class ="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>



<h1>New book</h1>
 <%= form_with model: @books,url:'/books',method: :post do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br>
      
    <%= f.submit 'Create Book' %>
  <% end %>
  </div>
  
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            
            <th>Title</th>
            <th>Opinion</th>
            
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(60, 60) %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>