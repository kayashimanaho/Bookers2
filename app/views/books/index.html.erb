<h1>Books</h1>
 <table class="table table-hover table-inverse">
   <thead>
     <tr>
       <th></th>
       <th>Title</th>
       <th>Opinion</th>
       <th colspan="3"></th>
     </tr>
   </thead>
   <tbody>
     <tr>
       <% @books.each do |book| %>
       <td><%= image_tag book.user.get_profile_image(100,100) %></td>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <% end %>
     </tr>
  </tbody>
</table>