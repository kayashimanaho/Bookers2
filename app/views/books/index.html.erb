  <%= @books.errors.count %>errors prohibited this obj from being saved
  <ul>
    <% @books.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
  
<!--あっているのか？-->
<%= render 'users/book',user: @user, book: @books %>


    
    <div class="col-md-8 offset-md-1">
      
        <h2>Books</h2>
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
                
              </tr>
            </thead>
            <tbody>
              <% @book_all.each do |book| %>
                <tr>
                  <td><%= link_to image_tag book.user.get_profile_image(100,100) %></td>
                  <td><%= link_to book.title,book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
    </div>
  </div>
</div>