<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/e820bdb904.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "Bookers",root_path,class: 'nav-link text-white' %>
          <!--<a class="navbar-brand" href="/"><span>Bookers</span></a>-->
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to new_book_path ,class: 'nav-link text-light' do %>
                <span><i class="fa-solid fa-house" style="color: white;"></i>Home</span>
                <% end %>              
                </li>
                
              <li class="nav-item">
                <%= link_to new_user_registration_path ,class: 'nav-link text-light' do %>
                <span><i class="fa-solid fa-users"></i>Users</span>
                <% end %>
                <!--<i class="fa-solid fa-users"></i>%= link_to "Users", new_user_registration_path,class: 'nav-link text-white' %>-->
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path ,class: 'nav-link text-light' do %>
                <span><i class="fa-solid fa-book"></i>Books</span>
                <% end %>
              </li>
              
              <li class="nav-item">
               <%= link_to destroy_user_session_path,class: 'nav-link text-light' ,method: :delete do %>
               <span><i class="fa-solid fa-right-from-bracket"></i>Log out</span>
              </li>
              <% end %>
              
            <% else %>
              <li class="nav-item">
                <%= link_to root_path,class: 'nav-link text-light' do %>
                <span><i class="fa-solid fa-house"></i>Home</span>
                <% end %>
              </li>
              
              <li class="nav-item">
                <%= link_to new_user_registration_path,class: 'nav-link text-light' do %>
                <span><i class="fa-sharp fa-solid fa-link"></i>About</span>
                <% end %>
                
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path,class: 'nav-link text-light' do  %>
                <span><i class="fa-solid fa-user-plus"></i>Sign up</span>
                <% end %>
              </li>
              
              <li class="nav-item">
                <%= link_to new_user_session_path,class: 'nav-link text-light' do  %>
                <span><i class="fa-solid fa-right-to-bracket"></i>Log in</span>
                <% end %>
              </li>
         <% end %>
        </ul>
      </div>
    </div>
  </nav>
</header>
    
    <%= yield %>
    
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
